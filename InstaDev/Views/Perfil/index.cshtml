@{
    ViewData["Title"] = "Perfil";
}

<link rel="stylesheet" href="~/css/perfil.css">
<div class="container">
    <section class="informações">
        <img class="icon_grande" src="~/@ViewBag.ImagemUsuario" alt="icone grande">
        <div class="todasasdivs">
            <span class="nomegrande">@ViewBag.Username</span>
