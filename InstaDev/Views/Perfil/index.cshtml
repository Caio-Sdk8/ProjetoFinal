                    </div>
                </div>
                <div class="divreacoes">
                    <div class="iconreacoes">
                        <img src="~/anexos\Vector (1).png" alt="curtida">
                        <img src="~/anexos\Vector (2).png" alt="comentario">
                    </div>
                    <span>1994 curtidas</span>
                </div>
                <div class="comentario">
                    <div class="spanzada">
                        <span class="nomecmt">@item.NomeUserpost</span>
                        <div>
                            <span class="azaralhou" class="comentariosr">@item.Descrição</span>
                        </div>
                    </div>
                    <img class="corazon" src="~/anexos\Vector (3).png" alt="coraçãozinho">
                </div>
